# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Amazon Configuration
AMAZON_AFFILIATE_TAG=opitweb-20
AMAZON_ACCESS_KEY=your-amazon-access-key (opcional para API oficial)
AMAZON_SECRET_KEY=your-amazon-secret-key (opcional)

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=alertas@opitweb.com.br

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OpitWeb

# Cron Secret (para proteger endpoints de cron)
CRON_SECRET=your-random-secret-string-here

# Analytics (opcional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Environment
NODE_ENV=development
