// src/components/products/ProductCard.tsx
import { Bell, ExternalLink } from 'lucide-react'
import Image from 'next/image'
import Link from 'next/link'

interface ProductCardProps {
  id: string
  asin: string
  title: string
  image_url?: string
  current_price?: number
  category?: string
  affiliate_link: string
  discount?: number
}

export function ProductCard({ 
  id, 
  asin, 
  title, 
  image_url, 
  current_price, 
  category,
  affiliate_link,
  discount 
}: ProductCardProps) {
  return (
    <div className="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
      <Link href={`/produto/${asin}`}>
        <div className="relative h-48 bg-gray-100">
          {image_url ? (
            <Image
              src={image_url}
              alt={title}
              fill
              className="object-cover"
            />
          ) : (
            <div className="flex items-center justify-center h-full text-gray-400">
              Sem imagem
            </div>
          )}
          {discount && (
            <div className="absolute top-2 right-2 bg-red-500 text-white px-3 py-1 rounded-full text-sm font-bold">
              -{discount}%
            </div>
          )}
        </div>
      </Link>
      
      <div className="p-4">
        {category && (
          <span className="text-xs text-gray-500 uppercase tracking-wide">
            {category}
          </span>
        )}
        
        <Link href={`/produto/${asin}`}>
          <h3 className="text-sm font-semibold text-gray-800 mt-1 mb-3 line-clamp-2 h-10 hover:text-orange-600 transition-colors">
            {title}
          </h3>
        </Link>
        
        {current_price && (
          <div className="mb-3">
            <p className="text-2xl font-bold text-green-600">
              R$ {current_price.toFixed(2)}
            </p>
          </div>
        )}
        
        <div className="flex gap-2">
          <a
            href={affiliate_link}
            target="_blank"
            rel="noopener noreferrer"
            className="flex-1 bg-gradient-to-r from-orange-500 to-orange-600 text-white py-2 px-4 rounded-lg hover:from-orange-600 hover:to-orange-700 transition-all font-semibold text-sm text-center flex items-center justify-center gap-2"
          >
            Ver na Amazon
            <ExternalLink size={14} />
          </a>
          
          <button
            className="bg-blue-100 text-blue-600 p-2 rounded-lg hover:bg-blue-200 transition-all"
            aria-label="Criar alerta de preço"
          >
            <Bell size={18} />
          </button>
        </div>
      </div>
    </div>
  )
}

// src/components/products/PriceChart.tsx
import { LineChart, Line, XAxis, YAxis, CartesianGrid, Tooltip, ResponsiveContainer } from 'recharts'

interface PriceHistoryData {
  date: string
  price: number
}

interface PriceChartProps {
  data: PriceHistoryData[]
  currentPrice?: number
}

export function PriceChart({ data, currentPrice }: PriceChartProps) {
  const maxPrice = Math.max(...data.map(d => d.price))
  const minPrice = Math.min(...data.map(d => d.price))
  const savings = currentPrice ? maxPrice - currentPrice : 0
  const savingsPercent = currentPrice ? ((savings / maxPrice) * 100).toFixed(0) : 0

  return (
    <div className="bg-white rounded-2xl shadow-xl p-6">
      <h3 className="text-2xl font-bold mb-6">Histórico de Preço</h3>
      
      <ResponsiveContainer width="100%" height={300}>
        <LineChart data={data}>
          <CartesianGrid strokeDasharray="3 3" stroke="#e5e7eb" />
          <XAxis 
            dataKey="date" 
            stroke="#6b7280"
            style={{ fontSize: '12px' }}
          />
          <YAxis 
            stroke="#6b7280"
            style={{ fontSize: '12px' }}
            tickFormatter={(value) => `R$ ${value}`}
          />
          <Tooltip 
            formatter={(value: number) => [`R$ ${value.toFixed(2)}`, 'Preço']}
            contentStyle={{ 
              backgroundColor: '#fff', 
              border: '1px solid #e5e7eb', 
              borderRadius: '8px',
              boxShadow: '0 2px 8px rgba(0,0,0,0.1)'
            }}
          />
          <Line 
            type="monotone" 
            dataKey="price" 
            stroke="#f97316" 
            strokeWidth={3}
            dot={{ fill: '#f97316', r: 4 }}
            activeDot={{ r: 6 }}
          />
        </LineChart>
      </ResponsiveContainer>
      
      <div className="mt-6 grid grid-cols-3 gap-4">
        <div className="bg-red-50 p-4 rounded-lg">
          <p className="text-sm text-gray-600 mb-1">Preço mais alto</p>
          <p className="text-xl font-bold text-red-600">
            R$ {maxPrice.toFixed(2)}
          </p>
        </div>
        
        <div className="bg-green-50 p-4 rounded-lg">
          <p className="text-sm text-gray-600 mb-1">Preço atual</p>
          <p className="text-xl font-bold text-green-600">
            R$ {currentPrice?.toFixed(2) || minPrice.toFixed(2)}
          </p>
        </div>
        
        <div className="bg-orange-50 p-4 rounded-lg">
          <p className="text-sm text-gray-600 mb-1">Você economiza</p>
          <p className="text-xl font-bold text-orange-600">
            {savingsPercent}% (R$ {savings.toFixed(2)})
          </p>
        </div>
      </div>
    </div>
  )
}

// src/components/dashboard/AlertsList.tsx
import { Bell, Trash2 } from 'lucide-react'
import { useState } from 'react'

interface Alert {
  id: string
  target_price: number
  is_active: boolean
  product: {
    title: string
    current_price: number
    image_url?: string
  }
}

interface AlertsListProps {
  alerts: Alert[]
  onDelete: (id: string) => Promise<void>
}

export function AlertsList({ alerts, onDelete }: AlertsListProps) {
  const [deleting, setDeleting] = useState<string | null>(null)

  const handleDelete = async (id: string) => {
    setDeleting(id)
    try {
      await onDelete(id)
    } finally {
      setDeleting(null)
    }
  }

  if (alerts.length === 0) {
    return (
      <div className="bg-white rounded-lg p-8 text-center">
        <Bell className="mx-auto mb-4 text-gray-400" size={48} />
        <h3 className="text-xl font-semibold text-gray-800 mb-2">
          Nenhum alerta ativo
        </h3>
        <p className="text-gray-600">
          Comece a rastrear produtos para receber notificações quando os preços caírem!
        </p>
      </div>
    )
  }

  return (
    <div className="space-y-4">
      {alerts.map((alert) => (
        <div
          key={alert.id}
          className="bg-white rounded-lg shadow-md p-4 flex items-center gap-4 hover:shadow-lg transition-shadow"
        >
          {alert.product.image_url && (
            <img
              src={alert.product.image_url}
              alt={alert.product.title}
              className="w-20 h-20 object-cover rounded-lg"
            />
          )}
          
          <div className="flex-1">
            <h4 className="font-semibold text-gray-800 mb-1">
              {alert.product.title}
            </h4>
            <div className="flex items-center gap-4 text-sm">
              <span className="text-gray-600">
                Preço atual: <strong className="text-green-600">
                  R$ {alert.product.current_price.toFixed(2)}
                </strong>
              </span>
              <span className="text-gray-600">
                Notificar em: <strong className="text-blue-600">
                  R$ {alert.target_price.toFixed(2)}
                </strong>
              </span>
            </div>
            
            {alert.product.current_price <= alert.target_price && (
              <div className="mt-2 inline-flex items-center gap-1 bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold">
                <Bell size={12} />
                Alerta ativado!
              </div>
            )}
          </div>
          
          <button
            onClick={() => handleDelete(alert.id)}
            disabled={deleting === alert.id}
            className="bg-red-100 text-red-600 p-2 rounded-lg hover:bg-red-200 transition-colors disabled:opacity-50"
            aria-label="Remover alerta"
          >
            <Trash2 size={18} />
          </button>
        </div>
      ))}
    </div>
  )
}

// src/components/dashboard/CreateAlertModal.tsx
import { useState } from 'react'
import { X } from 'lucide-react'

interface CreateAlertModalProps {
  productId: string
  productTitle: string
  currentPrice: number
  onClose: () => void
  onSubmit: (targetPrice: number) => Promise<void>
}

export function CreateAlertModal({
  productId,
  productTitle,
  currentPrice,
  onClose,
  onSubmit
}: CreateAlertModalProps) {
  const [targetPrice, setTargetPrice] = useState(currentPrice * 0.9)
  const [isSubmitting, setIsSubmitting] = useState(false)
  const [error, setError] = useState('')

  const discount = ((currentPrice - targetPrice) / currentPrice) * 100

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault()
    setError('')

    if (targetPrice <= 0) {
      setError('O preço deve ser maior que zero')
      return
    }

    if (targetPrice >= currentPrice) {
      setError('O preço alvo deve ser menor que o preço atual')
      return
    }

    setIsSubmitting(true)
    try {
      await onSubmit(targetPrice)
      onClose()
    } catch (err) {
      setError('Erro ao criar alerta. Tente novamente.')
    } finally {
      setIsSubmitting(false)
    }
  }

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
      <div className="bg-white rounded-2xl max-w-md w-full p-6 relative">
        <button
          onClick={onClose}
          className="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
        >
          <X size={24} />
        </button>

        <h2 className="text-2xl font-bold mb-4">Criar Alerta de Preço</h2>
        
        <div className="mb-4">
          <p className="text-sm text-gray-600 mb-2">{productTitle}</p>
          <p className="text-lg">
            Preço atual: <strong className="text-green-600">
              R$ {currentPrice.toFixed(2)}
            </strong>
          </p>
        </div>

        <form onSubmit={handleSubmit}>
          <div className="mb-4">
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Notificar quando o preço cair para:
            </label>
            <div className="relative">
              <span className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">
                R$
              </span>
              <input
                type="number"
                step="0.01"
                value={targetPrice}
                onChange={(e) => setTargetPrice(parseFloat(e.target.value))}
                className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                required
              />
            </div>
            
            {targetPrice < currentPrice && (
              <p className="mt-2 text-sm text-gray-600">
                Economia de <strong className="text-orange-600">
                  {discount.toFixed(0)}%
                </strong> ({(currentPrice - targetPrice).toFixed(2)} reais)
              </p>
            )}
          </div>

          {error && (
            <div className="mb-4 bg-red-50 text-red-600 px-4 py-2 rounded-lg text-sm">
              {error}
            </div>
          )}

          <div className="flex gap-3">
            <button
              type="button"
              onClick={onClose}
              className="flex-1 bg-gray-200 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-300 transition-colors"
            >
              Cancelar
            </button>
            <button
              type="submit"
              disabled={isSubmitting}
              className="flex-1 bg-gradient-to-r from-orange-500 to-orange-600 text-white py-3 rounded-lg font-semibold hover:from-orange-600 hover:to-orange-700 transition-all disabled:opacity-50"
            >
              {isSubmitting ? 'Criando...' : 'Criar Alerta'}
            </button>
          </div>
        </form>
      </div>
    </div>
  )
}

// src/hooks/useAuth.ts
import { useEffect, useState } from 'react'
import { createClient } from '@/lib/supabase/client'
import { User } from '@supabase/supabase-js'

export function useAuth() {
  const [user, setUser] = useState<User | null>(null)
  const [loading, setLoading] = useState(true)
  const supabase = createClient()

  useEffect(() => {
    // Buscar usuário inicial
    supabase.auth.getUser().then(({ data: { user } }) => {
      setUser(user)
      setLoading(false)
    })

    // Ouvir mudanças de autenticação
    const {
      data: { subscription },
    } = supabase.auth.onAuthStateChange((_event, session) => {
      setUser(session?.user ?? null)
      setLoading(false)
    })

    return () => subscription.unsubscribe()
  }, [])

  return { user, loading }
}

// src/hooks/useProducts.ts
import { useEffect, useState } from 'react'
import { Product } from '@/types/product'

export function useProducts(category?: string) {
  const [products, setProducts] = useState<Product[]>([])
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)

  useEffect(() => {
    const fetchProducts = async () => {
      try {
        setLoading(true)
        const url = category 
          ? `/api/products?category=${category}`
          : '/api/products'
        
        const response = await fetch(url)
        if (!response.ok) throw new Error('Failed to fetch products')
        
        const data = await response.json()
        setProducts(data.products)
      } catch (err) {
        setError(err instanceof Error ? err.message : 'Unknown error')
      } finally {
        setLoading(false)
      }
    }

    fetchProducts()
  }, [category])

  return { products, loading, error }
}
